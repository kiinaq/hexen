// Basic Variables - Learning val and mut
// Demonstrates Hexen's variable system with type inference

func main() : i32 = {
    // Immutable variables (default choice)
    val message = "Hello, Hexen!"  // string type inferred
    val count = 42                 // i32 type inferred
    
    // Mutable variables (when you need to change values)
    mut counter = 0                // Can be reassigned
    counter = count                // Now counter equals 42
    
    return counter
} 