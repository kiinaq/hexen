// Bool type demonstration in Hexen
func main() : bool = {
    // Boolean variable declarations
    val is_ready = true
    val is_done = false
    
    // Explicit bool type annotation
    val success : bool = true
    mut active : bool = false
    
    // Reassignment of mutable bool
    active = true
    
    // Return boolean value
    return is_ready
}

// Void function with boolean operations
func check_status() : void = {
    val enabled = true
    val disabled = false
    return
} 