// Ultra-minimal Hexen grammar
// Target: func main() -> i32 { return 0 }

program: function

function: "func" IDENTIFIER "(" ")" "->" type block

block: "{" statement "}"

statement: return_stmt

return_stmt: "return" expression

expression: NUMBER

type: "i32"

// Terminals
IDENTIFIER: /[a-zA-Z_][a-zA-Z0-9_]*/
NUMBER: /[0-9]+/

// Ignore whitespace
%import common.WS
%ignore WS 