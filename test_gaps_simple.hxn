func test_basic_gaps() : void = {
    // Test 1: Basic comptime preservation (val vs mut)
    val flexible_int = 42
    val as_i32 : i32 = flexible_int
    val as_i64 : i64 = flexible_int
    
    mut concrete_mut : i32 = 42
    
    // Test 2: Division operators
    val float_div = 10 / 3
    val int_div = 10 \ 3
    val float_result : f64 = float_div
    val int_result : i32 = int_div
    
    // Test 3: Mixed operations (without explicit conversion syntax)
    val a : i32 = 10
    val b : i32 = 20
    val same_types : i32 = a + b
    
    // Test 4: Comptime + concrete adaptation
    val concrete_base : i32 = 100
    val adapted : i32 = concrete_base + 42
}